<div class="container" style="height: 82vh">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
          <h5 class="card-title text-center mb-5 fw-light fs-5">Forgot your password?</h5>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-floating mb-3">
              <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
              <%= f.label :email %>
            </div>
            <div class="d-grid">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-login text-uppercase fw-bold" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
